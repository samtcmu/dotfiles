" Enable gtags
" source /home/build/nonconf/google3/tools/tags/gtags.vim

" Enable syntax highlighting for .proto files.
augroup filetype
    au! BufRead,BufNewFile *.proto setfiletype proto
    au! BufRead,BufNewFile *.borg  setfiletype borg
    au! BufRead,BufNewFile BUILD   setfiletype conf
    au! BufRead,BufNewFile *.gcl   setfiletype gcl
augroup end

" Set up \c to open the .cc file corresponding to the .h file open in the
" current buffer.
nmap <leader>c :e %:r.cc<CR>

" Set up \h to open the .h file corresponding to the .cc file open in the
" current buffer.
nmap <leader>h :e %:r.h<CR>

" Set up \t to open the _test.cc file correponding to the .cc or .h file open
" in the current buffer.
nmap <leader>t :e %:r_test.cc<CR>

" Set up \d to open the directory the current file is in.
nmap <leader>d :e %:h<CR>

" Set up \D to start typing a filename name to open within the current
" directory.
nmap <leader>D :e <c-r>=expand("%:h")<CR>/
